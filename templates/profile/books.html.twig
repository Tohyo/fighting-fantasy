{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <section class="pt-[120px] pb-[120px]">
        <div class="container">
            <div class="-mx-4 flex flex-wrap light-dark w-full">
                <ul class="p-8">
                    {% for book in books %}
                        <li class="mb-6 border-b border-body-color border-opacity-10 pb-6 border-white">
                            <div class="flex items-center lg:block xl:flex">
                                <div class="w-full">
                                    <div class="flex items-start gap-x-3">
                                        <p class="text-sm font-semibold leading-6 ">{{ book.title }}</p>
                                    </div>
                                    <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
                                        <p class="truncate">{{ book.description }}</p>
                                    </div>
                                    <a class="inline-flex items-center justify-center rounded-full bg-primary py-2 px-4 text-sm font-semibold text-white" href="{{ path('app_chapter_list', { id: book.id }) }}">See chapters</a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
{% endblock %}
