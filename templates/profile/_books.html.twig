{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <turbo-frame id="profile">
        <div class="w-full">
            <ul class="flex">
                <li class="flex-1 mr-2">
                    <a class="text-center block border border-white rounded hover:border-gray-200 text-blue-500 hover:bg-gray-200 py-2 px-4" href="{{ path('app_profile_adventures') }}">Your adventures</a>
                </li>
                <li class="flex-1 mr-2">
                    <a class="text-center block border border-blue-500 rounded py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white" href="#">Your books</a>
                </li>
            </ul>
            <h2 class="flex w-full mb-8 mt-8 text-3xl font-bold text-white sm:text-4xl justify-center">My Books</h2>
            <ul class="p-8">
            {% for book in pagination %}
                <li class="mb-6 border-b border-body-color border-opacity-10 pb-6 border-white">
                    <div class="flex items-center lg:block xl:flex">
                        <div class="w-full">
                            <div class="flex items-start gap-x-3">
                                <p class="text-sm font-semibold leading-6 ">{{ book.title }}</p>
                            </div>
                            <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
                                <p class="truncate">{{ book.description }}</p>
                            </div>
                            <a
                                class="inline-flex items-center justify-center rounded-full bg-primary py-2 px-4 text-sm font-semibold text-white"
                                href="{{ path('app_chapter_list', { id: book.id }) }}"
                                target="_top"
                            >
                                See chapters
                            </a>
                        </div>
                    </div>
                </li>
            {% endfor %}
            </ul>
            <div>{{ knp_pagination_render(pagination) }}</div>
        </div>
    </turbo-frame>
{% endblock %}
