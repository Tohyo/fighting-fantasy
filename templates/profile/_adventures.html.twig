{% extends 'base.html.twig' %}

{% block body %}
    <turbo-frame id="profile">
        <div class="w-full">
            <ul class="flex">
                <li class="flex-1 mr-2">
                    <a class="text-center block border border-blue-500 rounded py-2 px-4 bg-blue-500 hover:bg-blue-700 text-white" href="#">Your adventures</a>
                </li>
                <li class="flex-1 mr-2">
                    <a class="text-center block border border-white rounded hover:border-gray-200 text-blue-500 hover:bg-gray-200 py-2 px-4" href="{{ path('app_profile_books') }}">Your books</a>
                </li>
            </ul>
            <h2 class="flex w-full mb-8 mt-8 text-3xl font-bold text-white sm:text-4xl justify-center">My Adventures</h2>
            <ul class="p-8">
                {% for adventure in adventures %}
                    <li class="mb-6 border-b border-body-color border-opacity-10 pb-6 border-white">
                        <div class="flex items-center lg:block xl:flex">
                            <div class="w-full">
                                <h4 class="mb-3 text-2xl font-bol text-white sm:text-3xl">{{ adventure.book.title }}</h4>
                                <p>
                                    You are currently at chapter
                                    {{ adventure.chapter.number }}
                                    <a target="_top" href="{{ path('app_adventure', { slug: adventure.book.slug }) }}" class="inline-flex items-center justify-center rounded-full bg-primary py-2 px-4 text-sm font-semibold text-white">
                                        Continue
                                    </a>
                                </p>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </turbo-frame>
{% endblock %}
