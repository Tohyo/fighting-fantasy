{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <header>
            <nav class="flex overflow-x-auto border-b border-white/10 py-4">
                <ul class="flex min-w-full flex-none gap-x-6 leading-6">
                    <li>
                        <a href="#" class="text-black">Your adventures</a>
                    </li>
                    <li>
                        <a href="#" class="">Your books</a>
                    </li>
                </ul>
            </nav>
        </header>
        <main>
            <div class="overflow-hidden rounded-lg bg-white shadow">
                <div class="p-6">
                    {% for adventure in adventures %}
                        <ul class="divide-y divide-gray-100">
                            <li class="flex items-center justify-between gap-x-6 py-5">
                                <div class="min-w-0">
                                    <div class="flex items-start gap-x-3">
                                        <p class="text-sm font-semibold leading-6 text-gray-900">{{ adventure.book.title }}</p>
                                    </div>
                                    <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
                                        <p class="truncate">{{ adventure.book.description }}</p>
                                    </div>
                                </div>
                                <div class="flex flex-none items-center gap-x-4">
                                    <a href="{{ path('app_adventure', { slug: adventure.book.slug }) }}" class="hidden rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block">
                                        Continue
                                    </a>
                                </div>
                            </li>
                        </ul>
                    {% endfor %}
                </div>
            </div>
        </main>
    </div>
{% endblock %}
