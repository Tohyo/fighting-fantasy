{% extends 'base.html.twig' %}

{% block body %}
    <section class="overflow-hidden py-16 md:py-20 lg:py-28">
        <div class="container">
            <div class="-mx-4 flex flex-wrap">
                <div class="w-full px-4 lg:w-7/12 xl:w-8/12">
                    <div class="wow fadeInUp mb-12 rounded-md  py-11 px-8 light-dark sm:p-[55px] lg:mb-5 lg:px-8 xl:p-[55px]" data-wow-delay=".15s ">
                        <turbo-frame id="chapter-content" src={{ path('app_chapter', { slug: adventure.book.slug, number: adventure.chapter.number } ) }}></turbo-frame>
                    </div>
                </div>
                <div class="w-full px-4 lg:w-5/12 xl:w-4/12">
                    <div class="wow fadeInUp relative z-10 rounded-md p-8 light-dark sm:p-11 lg:p-8 xl:p-11" data-wow-delay=".2s">
                        <h3 class="flex mb-4 text-2xl font-bold leading-tight text-white justify-center">Inventory</h3>
                        <div class="grid grid-cols-3 gap-4">
                            {{ component('skill', { adventureSheet: adventure.adventureSheet }) }}
                            {{ component('stamina', { adventureSheet: adventure.adventureSheet }) }}
                            {{ component('luck', { adventureSheet: adventure.adventureSheet }) }}
                            {{ component('inventory', { adventureSheet: adventure.adventureSheet }) }}
                            <div class="border border-white">
                                Gold
                            </div>
                            <div class="border border-white">
                                Provisions
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
