{% extends 'base.html.twig' %}

{% block body %}
    <section class="pt-[120px] pb-[120px]">
        <div class="container">
            <div class="-mx-4 flex flex-wrap light-dark w-full justify-center items-center">
                <div class="w-full m-4">
                    <h1 class="text-4xl font-bold text-center mb-8">Update Book: {{ book.title }}</h1>
                </div>
                {{ form_start(form, { 'attr': { 'class': 'w-full p-8' } }) }}
                    <div class="mb-8">
                        {{ form_label(form.title, '', { 'attr': { 'class': 'mb-3 block text-sm font-medium text-white' }}) }}

                        {{ form_widget(form.title, { 'attr': { 'class': 'w-full rounded-md border border-transparent py-3 px-6 text-base text-body-color placeholder-body-color shadow-one outline-none focus:border-primary focus-visible:shadow-none bg-[#242B51] shadow-signUp' } }) }}
                    </div>

                    <div class="mb-8">
                        {{ form_label(form.description, '', { 'attr': { 'class': 'mb-3 block text-sm font-medium text-white' }}) }}

                        {{ form_widget(form.description, { 'attr': { 'class': 'w-full rounded-md border border-transparent py-3 px-6 text-base text-body-color placeholder-body-color shadow-one outline-none focus:border-primary focus-visible:shadow-none bg-[#242B51] shadow-signUp' } }) }}
                    </div>

                    <div class="mb-8 flex items-center">
                        {{ form_widget(form.published, { 'attr': { 'class': 'box mr-4 flex h-5 w-5 justify-center rounded border border-body-color border-white border-opacity-10' } }) }}
                        {{ form_label(form.published, '', { 'attr': { 'class': 'flex cursor-pointer select-none text-sm font-medium text-body-color' }}) }}
                    </div>

                    <div class="flex w-full space-x-4">
                        <button type="submit" class="flex w-full items-center justify-center rounded-md bg-primary py-4 px-9 text-base font-medium text-white transition duration-300 ease-in-out hover:bg-opacity-80 hover:shadow-signUp">Save</button>
                        <a href="{{ path('app_book_show', { slug: book.slug }) }}" class="flex w-full items-center justify-center rounded-md bg-secondary py-4 px-9 text-base font-medium text-white hover:bg-opacity-80">Cancel</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
