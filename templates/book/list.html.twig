{% include 'base.html.twig' %}

{% block body %}
    <section class="py-16">
        <div class="container">
            <div class="-mx-4 flex flex-wrap justify-center">
                {% for book in pagination %}
                    <div class="w-full px-4 md:w-2/3 lg:w-1/2 xl:w-1/3">
                        <div>
                            <a class="relative block h-[220px] w-full" href="/">
                                <img sizes="100vw" src="{{ asset('images/ffantasy.jpeg') }}" loading="lazy" style="position:absolute;height:100%;width:100%;left:0;top:0;right:0;bottom:0;color:transparent">
                            </a>
                            <div class="light-dark p-6 sm:p-8 md:py-8 md:px-6 lg:p-8 xl:py-8 xl:px-5 2xl:p-8">
                                <h3>
                                    <a class="mb-4 block text-xl font-bold hover:text-primary text-white sm:text-2xl" href="{{ path('app_book_show', { slug: book.slug }) }}">{{ book.title }}</a>
                                </h3>
                                <p class="mb-6 border-b border-body-color border-opacity-10 pb-6 text-base font-medium">{{ book.description|raw }}</p>
                                <div class="flex items-center">
                                    <div class="mr-5 flex items-center border-r border-body-color border-opacity-10 pr-5 xl:mr-3 xl:pr-3 2xl:mr-5 2xl:pr-5">
                                        <div class="w-full">
                                            <h4 class="mb-1 text-sm font-medium text-white">
                                                By {{ book.creator.fullName }}
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="inline-block">
                                        <h4 class="mb-1 text-sm font-medium text-white">Date</h4>
                                        <p class="text-xs text-body-color">{{ book.createdAt|date('d-m-Y') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div>{{ knp_pagination_render(pagination) }}</div>
        </div>
    </section>
{% endblock %}
