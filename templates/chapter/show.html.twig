{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-16">
        <div class="container">
            <div class="-mx-4 flex flex-wrap justify-center light-dark">
                <div class="p-8 w-full px-4 lg:w-8/12">
                    <div>
                        <h2 class="mb-8 text-3xl font-bold leading-tight text-white sm:text-4xl sm:leading-tight">{{ chapter.number }}</h2>
                    </div>
                    <div>
                        <p class="mb-10 text-base font-medium leading-relaxed text-body-color sm:text-lg sm:leading-relaxed lg:text-base lg:leading-relaxed xl:text-lg xl:leading-relaxed">{{ chapter.content }}</p>
                    </div>
                    <div class="flex w-full space-x-4">
                        {% if is_granted(constant('App\\Security\\Voter\\ChapterVoter::EDIT'), chapter) %}
                            <a class="w-1/2 inline-flex items-center justify-center rounded-full bg-primary py-2 px-4 text-sm font-semibold text-white pr-4" href="{{ path('app_chapter_edit', { id: chapter.id }) }}">edit</a>
                        {% endif %}
                        {% if is_granted(constant('App\\Security\\Voter\\ChapterVoter::DELETE'), chapter) %}
                            <form class="w-1/2" action="{{ path('app_chapter_delete', { id: chapter.id }) }}" method="DELETE">
                                <button class="w-full inline-flex items-center justify-center rounded-full bg-red-700 py-2 px-4 text-sm font-semibold text-white">
                                    delete
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div
        </div>
    </section>
{% endblock %}
