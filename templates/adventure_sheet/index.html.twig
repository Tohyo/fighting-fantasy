{% extends 'base.html.twig' %}

{% block title %}Hello AdventureSheetController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <div
        {{ stimulus_controller('adventure-sheet', {
            'luck': adventure_sheet.getLuck()
        }) }} 
    >
        <button data-action="adventure-sheet#addLuck" >🍀</button>
        <span
             
            data-adventure-sheet-target="luck"
        >
            {{ adventure_sheet.getLuck() }}
        </span>
    </div>
</div>
{% endblock %}
